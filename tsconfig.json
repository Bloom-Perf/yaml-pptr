{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "lib": ["es2019"],
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "nodenext",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src"]
}
  